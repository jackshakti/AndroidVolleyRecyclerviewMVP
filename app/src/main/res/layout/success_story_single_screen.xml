<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_13sdp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/SuccessStory_single_projectOwner_imageView"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_52sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="1px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/SuccessStory_single_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_toEndOf="@+id/SuccessStory_single_projectOwner_imageView"
            android:text="Detailed News on Oman's Corporate investment in retail Marketing Detailed News on Oman's Corporate investment in retail Marketing"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            tools:ignore="HardcodedText"
            android:layout_toRightOf="@+id/SuccessStory_single_projectOwner_imageView" />


        <TextView
            android:id="@+id/SuccessStory_single_projectDescription_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SuccessStory_single_title_textView"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/SuccessStory_single_projectOwner_imageView"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_toRightOf="@+id/SuccessStory_single_projectOwner_imageView" />

        <TextView
            android:id="@+id/SuccessStory_single_projectDescription_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SuccessStory_single_projectDescription_label"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toEndOf="@+id/SuccessStory_single_projectOwner_imageView"
            android:alpha="0.8"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="Detailed News on Oman's Corporate investment in retail Marketing Detailed News on Oman's Corporate investment in retail Marketing"
            android:textColor="#000000"
            android:textSize="@dimen/_11sdp"
            tools:ignore="HardcodedText"
            android:layout_toRightOf="@+id/SuccessStory_single_projectOwner_imageView" />


    </RelativeLayout>


</RelativeLayout>