<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layoutDirection="locale">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/pkDialog_alert_imageView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:src="@drawable/ic_launcher_background"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <com.iopandroid.library.widgets.CustomTextViewRobotoBold
            android:id="@+id/pkDialog_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pkDialog_alert_imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:text="Want to Cancel"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <com.iopandroid.library.widgets.CustomTextViewRobotoRegular
            android:id="@+id/pkDialog_message_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pkDialog_title_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:gravity="center"
            android:text="prem"
            android:textColor="#000000"
            android:textSize="@dimen/_13sdp"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:id="@+id/pkDialog_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_37sdp"
            android:layout_below="@+id/pkDialog_message_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal">

            <com.iopandroid.library.widgets.CustomButton
                android:id="@+id/pkDialog_cancel_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:minWidth="@dimen/_120sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:shadowColor="#ffffff"
                android:text="CANCEL"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                tools:ignore="ButtonStyle,HardcodedText" />

            <com.iopandroid.library.widgets.CustomButton
                android:id="@+id/pkDialog_ok_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:minWidth="@dimen/_120sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sdp"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>